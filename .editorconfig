root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.{ps1}]
charset = utf-8-bom
end_of_line = crlf

[*.{cmd,bat}]
charset = euc-kr
end_of_line = crlf

[*.{ini,py,py.tpl,rst}]
indent_style = space
indent_size = 4

[*.go]
indent_size = 4

[*.rs]
indent_size = 4

[*.{md,mdx,diff}]
trim_trailing_whitespace = false
